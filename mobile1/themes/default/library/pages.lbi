<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<section class="list-pagination">
<!-- {if $page.styleid eq 0 } 默认经典分页-->
    <div class="pagenav-wrapper" id="J_PageNavWrap" style="">
      <div class="pagenav-content">
        <div class="pagenav new-tbl-type" id="J_PageNav">
          <div class="{if $page.page_first}p-first{else}p-prev p-gray{/if} new-tbl-type" > 
              <!-- {if $page.page_first} -->
              <a href="{$page.page_first}">首页</a>
              <!--{else}-->
               <a  class="no">首页</a> 
              <!-- {/if} -->
          </div>
          <div class="{if $page.page_prev}p-prev{else}p-prev p-gray{/if}">  
              <!-- {if $page.page_prev} -->
              <a href="{$page.page_prev}" >&lt;上一页</a>
              <!-- {else} -->
              <a class="no">&lt;上一页</a>   
              <!-- {/if} -->
          </div>
          <div class="pagenav-cur">
            <div class="pagenav-text"> <span>{$page.page}/{$page.page_count}</span> <i></i> </div>
            <select name="page" class="pagenav-select" onchange="window.location.href=this.options[this.selectedIndex].value" >
            <!--{if $page.page_number }-->
            {foreach from=$page.page_number key=key item=item}
              <option value="{$item}" {if $page.page eq $key}selected=true{/if}>{$key}</option>
            {/foreach}
            <!--{/if}-->
            </select>
          </div>
          <div class="{if $page.page_next}p-next{else}p-next p-gray{/if}" > 
          	<!-- {if $page.page_next} -->
              <a  href="{$page.page_next}" >下一页&gt;</a>
              <!-- {else} -->
              <a class="no">下一页&gt;</a> 
              <!-- {/if} -->
          </div>
          <div class="{if $page.page_last}p-end{else}p-end p-gray{/if}" >
           <!-- {if $page.page_last} -->
           <a href="{$page.page_last}">{$lang.page_last}</a>
           <!--{else}-->
           <a class="no">末页</a> 
           <!-- {/if} -->
           </div>
        </div>
      </div>
    </div>


<!--{else}-->

<div class="pagenav-wrapper" id="J_PageNavWrap" style="float:right">
    <div class="pagenav" id="J_PageNav" style="display:flex; text-align:center; ">
    <span class="" style="margin-right:10px;line-height:2.5em;height:2.5em;">{$lang.pager_1}<b>{$page.record_count}</b> {$lang.pager_2}</span>
    <!-- {if $page.page_first} --><div class="p-prev"><a href="{$page.page_first}">{$lang.page_first} ...</a></div><!-- {/if} -->
    <!-- {if $page.page_prev} --><div class="p-prev"><a class="prev" href="{$page.page_prev}">{$lang.page_prev}</a></div><!-- {/if} -->
    <!-- {if $page.page_count neq 1} -->
      <!--{foreach from=$page.page_number key=key item=item}-->
        <!-- {if $page.page eq $key} -->
        <div class="p-prev " style="background:none;cursor:default;"><a class="page_now">{$key}</a></div>
        <!-- {else} -->
        <div class="p-prev"><a href="{$item}">{$key}</a></div>
        <!-- {/if} -->
      <!--{/foreach}-->
    <!-- {/if} -->

    <!-- {if $page.page_next} --><div class="p-prev"><a class="next" href="{$page.page_next}">{$lang.page_next}</a></div><!-- {/if} -->
    <!-- {if $page.page_last} --><div class="p-prev"><a class="last" href="{$page.page_last}">...{$lang.page_last}</a></div><!-- {/if} -->
    </div>
</div>
<div class="blank1"></div>
{/if}
</section>