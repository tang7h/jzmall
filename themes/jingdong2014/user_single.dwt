<script type="text/javascript">
var img_id_upload=new Array();//初始化数组，存储已经上传的图片名
var i=0;//初始化数组下标
$(function() {
	uploadLimit = 10;
    $('#file_upload').uploadify({
    	'auto'     : true,//关闭自动上传
    	'removeTimeout' : 1,//文件队列上传完成1秒后删除
        'swf'      : 'uploadify.swf',
        'uploader' : 'uploadify.php',
        'method'   : 'post',//方法，服务端可以用$_POST数组获取数据
	'buttonText' : '上传图片',//设置按钮文本
        'multi'    : true,//允许同时上传多张图片
        'uploadLimit' : uploadLimit,//一次最多只允许上传10张图片
        'fileTypeDesc' : '允许类型',//只允许上传图像
        'fileTypeExts' : '*.gif; *.jpg; *.png',//限制允许上传的图片后缀
        'fileSizeLimit' : '4096KB',//限制上传的图片不得超过4M 
	 height: 30,//上传按钮的高和宽
	 width: 120,
	 progressData : 'all',
	 successTimeout : 30,//上传时的
	 postData: {},//和后台交互时，附加的参数

        'onUploadSuccess' : function(file, data, response) {//每次成功上传后执行的回调函数，从服务端返回数据到前端
		//alert(data);
               img_id_upload[i]=data;
               i++;
		var item_img = '<div id="img-' + file.id + '"><div class="item"><div class="img"><img src="' + data + '" width="120" height="90" /><input type="hidden" name="single_img_url['+file.id+']" value="' + data + '"></div><div class="i-item" style="padding-left:120px;"><div class="s-list"><p><input type="radio" name="cover" id="cover" value="' + file.id + '">设为封面 <span onclick=del_img(' + '"' + file.id + '"' + '); style="cursor:pointer;">删除</span></p><textarea name="cont_desc[]" id="cont_desc" rows="5" style="max-width: 395px; max-height: 52px;min-width: 395px; min-height: 52px;"></textarea></div></div></div><div class="blank"></div><div class="blank"></div><div class="blank"></div>';
		$("#upimg_box").append(item_img);
	       
			   //alert(data);
        },
        'onQueueComplete' : function(queueData) {//上传队列全部完成后执行的回调函数
            if(img_id_upload.length>0)
				//var img = "<img src=uploads/" + encodeURIComponent(img_id_upload) + " />";
				//$('#imgBox').html(img);
				//alert(img_id_upload);
            encodeURIComponent(img_id_upload);
        }
        // Put your options here
    });
});
</script>

